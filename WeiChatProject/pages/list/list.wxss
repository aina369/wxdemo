/* pages/list/list.wxss */
swiper image{
  display: block;
  width:100%;
  height:300rpx;
}
.bookList{
  margin-top:10rpx;
}
.bookList .book-item{
  float:left;
  overflow: hidden;
  width:30%;
  margin: 0 1.6%;
}
.bookList .img{
  width:300rpx;
  height:220rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ccc inset;
  display:table-cell;
  vertical-align:middle;
  text-align:center;
}
.bookList image{
  width:150rpx;
  height:180rpx;
}

.bookList .des text{
  padding:0 12rpx;
  font-size: 28rpx;
  line-height: 1;
  width:100rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:elliplise;
}
.bookList .des .price{
  color:#999;
  font-size: 22rpx;
}
.bookList .des .red{
  color:red;
}
.bookList .shopping-cart{
  width:20rpx;
  height:20rpx;
}
.skipCart{
  position: fixed;
  bottom:0rpx;
  right:20rpx;
  border-radius: 50%;
  border:1rpx solid red;
}
.skipCart image{
  width:50rpx;
  height:50rpx;
}