/* pages/lendnow/lendnow.wxss */
.clearfix{
  overflow: auto;
  _height:1%; 
}
page{
  height:100%;
}
.container{
  padding:0;
  background-color: #eee;
  height:100%;
  display: block;
}
.topBar{
  width:100%;
  text-align: center;
  line-height: 2;
  background-color: #fff;
}
.mrb20{
  margin-bottom: 20rpx;
  line-height:3;
  font-size:30rpx;
  width:100%;
}
.pdl30{
  padding-left:30rpx;
}
.bgPink{
  background-color: pink;
  color:red;
}
#location{
  line-height: 1.5;
  padding-top:20rpx;
  padding-bottom:20rpx;
  background-color: #fff;
}
.location{
  float:left;
  width:10%;
  text-align: center;
  margin-top:43rpx;
  background:#fff;
}
.location image{
  width:40rpx;
  height:40rpx;
}
.address{
  float:left;
  width:80%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.address .blue{
  color:blue;
  font-size:20rpx; 
}
.arrow{
  float:left;
  width:10%;
  text-align: center;
  margin-top:43rpx;
}
.arrow image{
  width:40rpx;
  height:40rpx;
}
.bookInfo{
  background-color: #fff;
  padding-left:50rpx;
  padding-top:20rpx;
  line-height:2;
  font-size: 24rpx;
}
.bookInfo .left{
  float:left;
  font-size:24rpx;
}
.bookInfo .left .book-item{
  margin-right:10rpx;
}
.bookInfo .right{
  float:right;
  margin-right:70rpx;
}
.bookInfo .left text{
  width:100rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display:block
}
.bookInfo .left image{
  display: block;
  width:100rpx;
  height:150rpx;
}
.bookInfo .right text{
  line-height: 7;
}
.bookInfo .right image{
  display: inline-block;
  width:40rpx;
  height:40rpx;
}
#lending_fee{
  background-color: #fff;
}
#freight{
  background-color: #fff;
  position: relative;
}
.bottom{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
}
.bottom .total{
  float:left;
}
.bottom .total text{
  color:red;
}
.bottom .balance{
  width:20%;
  text-align: center;
  float:right;
  color:#fff;
  background-color: red;
  margin-right:30rpx;
}
#lending_fee{
  padding-right:100rpx;
}
#lending_fee .tip{
  color: #999;
  font-size: 24rpx;
}
#lending_fee .no_fee{
  float:right;
  margin-right: 50rpx;
  color:red;
}
#freight image{
  width:60rpx;
  height:60rpx;
  display:inline-block;
  position: absolute;
  top:13rpx;
  left:114rpx;
}
#freight text{
  float:right;
  margin-right: 50rpx;
  color: red;
}

